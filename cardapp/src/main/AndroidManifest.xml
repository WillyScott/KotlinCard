<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.williamgromme.kotlincard"
    android:versionCode="2">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.williamgromme.kotlincard.db.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.williamgromme.kotlincard.setcard.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.williamgromme.kotlincard.setcard.SetCardListActivity"></activity>
        <activity android:name="com.williamgromme.kotlincard.flashcard.FlashCardListActivity"></activity>
        <activity android:name="com.williamgromme.kotlincard.setcard.EditSetCardActivity"></activity>
        <activity android:name="com.williamgromme.kotlincard.flashcard.EditFlashCardActivity"></activity>
        <activity android:name="com.williamgromme.kotlincard.startcards.StartCardsActivity"></activity>
        <activity android:name="com.williamgromme.kotlincard.setcard.NewSetCardActivity"></activity>
        <activity android:name="com.williamgromme.kotlincard.flashcard.NewFlashCardActivity"></activity>
        <activity android:name="com.williamgromme.kotlincard.export.ExportCardsActivity"></activity>
        <activity
            android:name="com.williamgromme.kotlincard.setcard.HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>